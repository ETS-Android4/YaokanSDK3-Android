<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yaokantv.sdkdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SoftApConfigActivity"></activity>
        <activity android:name=".AppleCtrlListActivity" />
        <activity
            android:name=".RfMatchActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".InitActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MatchActivity"
            android:label="一级匹配"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SecondMatchActivity"
            android:label="二级匹配"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RcListActivity"
            android:label="遥控器列表"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RcActivity"
            android:label="遥控器详情"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".BrandActivity"
            android:label="遥控器品牌"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectProviderActivity"
            android:label="电视运营商"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>