    <style name="extra_grid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:focusable">false</item>
        <item name="android:horizontalSpacing">5dp</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:numColumns">3</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollX">0dp</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">none</item>
        <item name="android:verticalSpacing">30dp</item>
    </style>

    <style name="btn_power">
        <item name="android:background">@drawable/bg_matching</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="btn_circle">
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:layout_width">90dp</item>
