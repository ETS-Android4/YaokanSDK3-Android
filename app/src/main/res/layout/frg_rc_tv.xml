<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top_gray">

    <com.yaokantv.yaokanui.widget.CustScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stb_power"
                    style="@style/pv_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/tv_power"
                    android:text="@string/power_switch" />

                <TextView
                    android:id="@+id/sigal"
                    style="@style/pv_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/tv_signal"
                    android:text="@string/signal" />

                <TextView
                    android:id="@+id/boot"
                    style="@style/pv_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/tv_boot"
                    android:text="@string/boot" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:paddingStart="50dp"
                android:paddingEnd="50dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="150dp"
                    android:background="@drawable/shape_ship"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_channel_add"
                        style="@style/x_btn"
                        android:src="@drawable/btn_add" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/channel_name"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/btn_channel_sub"
                        style="@style/x_btn"
                        android:src="@drawable/btn_sub" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_mute"
                    style="@style/nor_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/btn_mute" />

                <Button
                    android:id="@+id/btn_exit"
                    style="@style/text_btn"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:text="@string/exit" />

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape_ship"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_vol_add"
                        style="@style/x_btn"
                        android:src="@drawable/btn_add" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/volume"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/btn_vol_sub"
                        style="@style/x_btn"
                        android:src="@drawable/btn_sub" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageButton
                    android:id="@+id/btn_menu"
                    style="@style/nor_btn"
                    android:src="@drawable/btn_menu" />

                <ImageButton
                    android:id="@+id/btn_back"
                    style="@style/nor_btn"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/btn_back" />


                <include
                    layout="@layout/layout_direction"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_1"
                    style="@style/x_num_text"
                    android:text="1" />

                <TextView
                    android:id="@+id/tv_2"
                    style="@style/x_num_text"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="2" />

                <TextView
                    android:id="@+id/tv_3"
                    style="@style/x_num_text"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_4"
                    style="@style/x_num_text"
                    android:text="4" />

                <TextView
                    android:id="@+id/tv_5"
                    style="@style/x_num_text"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="5" />

                <TextView
                    android:id="@+id/tv_6"
                    style="@style/x_num_text"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_7"
                    style="@style/x_num_text"
                    android:text="7" />

                <TextView
                    android:id="@+id/tv_8"
                    style="@style/x_num_text"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="8" />

                <TextView
                    android:id="@+id/tv_9"
                    style="@style/x_num_text"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_digit"
                    style="@style/x_num_text"
                    android:text="-/--" />

                <TextView
                    android:id="@+id/tv_0"
                    style="@style/x_num_text"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_sharp"
                    style="@style/x_num_text"
                    android:text="#" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.yaokantv.yaokanui.widget.NoScrollGridView
                    android:id="@+id/gv"
                    style="@style/extra_grid" />
            </LinearLayout>
        </LinearLayout>
    </com.yaokantv.yaokanui.widget.CustScrollView>
</RelativeLayout>